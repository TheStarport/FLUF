{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "./ConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "conan-debug"
        },
        {
            "name": "debug-all",
            "displayName": "Debug (All)",
            "inherits": "debug",
            "cacheVariables": {
                "BUILD_SAMPLES": true
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "conan-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-all",
            "displayName": "Release (All)",
            "inherits": "release",
            "cacheVariables": {
                "BUILD_SAMPLES": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "conan-debug"
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "conan-release"
        }
    ]
}