{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "include": [
    "./ConanPresets.json"
  ],
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "FLUF Debug",
      "inherits": "conan-debug",
      "cacheVariables": {
        "BUILD_SAMPLES": true
      }
    },
    {
      "name": "release",
      "displayName": "FLUF Release",
      "inherits": "conan-relwithdebinfo",
      "cacheVariables": {
        "BUILD_SAMPLES": true,
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "FLUF Debug Build",
      "inherits": "conan-debug"
    },
    {
      "name": "release",
      "displayName": "FLUF Release Build",
      "inherits": "conan-relwithdebinfo"
    }
  ]
}